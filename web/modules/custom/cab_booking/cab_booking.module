<?php

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Form\FormStateInterface;
use Drupal\node\NodeInterface;

/**
 * Implements hook_entity_presave().
 */
function cab_booking_entity_presave(EntityInterface $entity) {
  if ($entity instanceof NodeInterface && $entity->bundle() === 'booking') {
    // Set a default title before saving.
    $entity->setTitle('Booking');
  }
}

/**
 * Implements hook_entity_insert().
 */
function cab_booking_entity_insert(EntityInterface $entity) {
  if ($entity instanceof NodeInterface && $entity->bundle() === 'booking') {
    // Set the title to include node ID after the node is created.
    $entity->setTitle('Booking #' . $entity->id());
    $entity->save();
  }
}

/**
 * Implements hook_theme().
 */
function cab_booking_theme($existing, $type, $theme, $path) {
  return [
    'cab_booking' => [
      'variables' => [
        'booking_form' => NULL,
      ],
      'template' => 'cab-booking',
    ],
  ];
}

use Drupal\node\Entity\Node;

/**
 * Implements hook_form_FORM_ID_alter().
 */
function cab_booking_form_node_booking_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  // Change the submit button label from "Save" to "Book"
  if (isset($form['actions']['submit'])) {
    $form['actions']['submit']['#value'] = t('Book');
  }
  $form['#validate'][] = 'cab_booking_form_node_booking_form_validate';
}

/**
 * Form validation handler for node_booking_form.
 */
function cab_booking_form_node_booking_form_validate(&$form, FormStateInterface $form_state) {
  $booking_values = $form_state->getValues();
  // Get selected car type and seats from form values.
  $car_type = reset($booking_values['field_car_type']);
  $car_type = $car_type['target_id'];
  $seats_selected = reset($booking_values['field_seats']);
  $seats_selected = $seats_selected['value'];
  // Get car types from DrupalSettings (populated in block).
  
  $termStorage = \Drupal::entityTypeManager()->getStorage('taxonomy_term');
  $car_type_term = $termStorage->load($car_type);
  
  if (
    $car_type_term->get('field_seat_capacity')->value !== ''
  ) {
    $allowed_seats = $car_type_term->get('field_seat_capacity')->value;
    if ($seats_selected > $allowed_seats) {
      $form_state->setErrorByName('field_seats', t('Selected seats exceed allowed capacity (@capacity).', [
        '@capacity' => $allowed_seats,
      ]));
    }
  }
}
